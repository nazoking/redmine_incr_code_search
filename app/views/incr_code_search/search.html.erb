<% form_tag :action => 'search', :project_id => @project do %>
  <%= text_field_tag :keyword, @keyword %>
<% end %>

<%= observe_field(:keyword, :frequency => 0.5, :update => :files, :url => { :action => :live_search, :project_id => @project }) %>

<div id="files">
<%= render :partial => 'files' %>
</div>
